<%= form_for(@cosmetic_item) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :name, "Name" %><br>
  <%= f.text_field :name %><br>
  <%= f.label :description, "Description" %><br>
  <%= f.text_field :description %><br>
  <%= f.label :damage, "Damage" %><br>
  <%= f.number_field :damage %><br>
  <%= f.label :defense, "Defense" %><br>
  <%= f.number_field :defense %><br>
  <%= f.label :price, "Price" %><br>
  <%= f.number_field :price %><br>
  <%= f.label :image_path, "Image Path" %><br>
  <%= f.text_field :image_path %><br>
  <div class="radio">
    <label><%= f.radio_button(:cosmetic_type, "Armor") %>Armor</label><br>
    <label><%= f.radio_button(:cosmetic_type, "Weapon") %>Weapon</label><br>
    <label><%= f.radio_button(:cosmetic_type, "Helm") %>Helm</label><br>
  </div>
  <%= f.submit "New Item", class: "btn btn-primary" %>
<% end %>
