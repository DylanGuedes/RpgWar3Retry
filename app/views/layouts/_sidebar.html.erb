<% if current_user.player.playable? %>
  <div class="stats_container">
    <br>
    <div class="row">
      <div class="col-md-3">        
      </div>
      <div class="col-md-6">
        <div class="progress">
          <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= current_user.player.hp_min %>%;">            
          </div>
        </div>
        <div class="progress">
          <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= current_user.player.mp_in_percentage %>%;">            
          </div>
        </div>
      </div>
    </div>

    <center>
      <span class="label label-default"><%= current_user.login %></span>
      <span class="label label-default"><%= current_user.player.exp %></span>
      <span class="label label-default"><%= image_tag("battered-axe.png", size: "16x16") %> <%= current_user.player.damage %></span>
      <span class="label label-default"><%= image_tag("gold-bar.png", size: "16x16") %><%= current_user.player.gold %></span>
    </center>
    <br>
  </div>

  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><img alt="Brand" src="/assets/images/gold-bar.png"><%= image_tag("gold-bar.xcf") %></a>
    </div>
  </div>
</nav>
<% else %>
  <h1>CREATE YOUR CHARACTER</h1>
<% end -%>